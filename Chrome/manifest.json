{
  "name": "__MSG_NAME__",
  "version": "1.0.1",
  "manifest_version": 2,
  "description": "__MSG_DESCRIPTION__",
  "icons": { 
	"16"  : "images/icon-16.png",
	"48"  : "images/icon-48.png",
	"128" : "images/icon-128.png"
  },
  "default_locale": "en",
  "page_action": {
    "default_icon": { 
		"19"  : "images/icon-19.png",
		"38"  : "images/icon-38.png"
    },
    "default_title" : "__MSG_TITLE__"  ,
	"default_popup" : "popup.html"    
  },
  "content_scripts": [ 
    {
      "matches": [
        "*://*.trello.com/*"
      ],
      "css": ["styles/style.css"],
      "js":  ["scripts/jquery-2.0.3.min.js","scripts/moment.min.js", "scripts/content/common.js", "scripts/content/trello.js"]
    }
  ],
  "homepage_url": "http://www.timecamp.com/",
  "incognito": "spanning",
  "offline_enabled": false,
  "permissions" : [
    "tabs",
	"storage",
	"https://*.trello.com/*",
	"https://timecamp.com/*",
	"https://test.timecamp.pl/*",
	"https://riv-asus/*",
	"*://*/*"
  ],
  "background": {
    "scripts": ["scripts/background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
	"images/icon-16.png",
	"images/icon-19.png",
	"images/icon-38.png",
	"images/icon-48.png",
	"images/icon-128.png"
  ]
}